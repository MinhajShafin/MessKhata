<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Force Dark Only -->
    <style name="Base.Theme.MessKhata" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors - Monochrome -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>

        <!-- Secondary Colors - Monochrome -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>

        <!-- Background - Dark -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Error - Muted Red -->
        <item name="colorError">@color/error</item>

        <!-- On Colors - For Dark Theme -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Force dark mode -->
        <item name="android:forceDarkAllowed">false</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>

        <!-- Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Material Components Overrides -->
        <item name="materialCardViewStyle">@style/Widget.MessKhata.CardView</item>
        <item name="materialButtonStyle">@style/Widget.MessKhata.Button</item>
        <item name="chipStyle">@style/Widget.MessKhata.Chip</item>
        <item name="textInputStyle">@style/Widget.MessKhata.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.MessKhata.BottomNavigationView</item>
    </style>

    <style name="Theme.MessKhata" parent="Base.Theme.MessKhata" />

    <!-- Theme without ActionBar for login/signup screens -->
    <style name="Theme.MessKhata.NoActionBar" parent="Theme.MessKhata">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.MessKhata.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.MessKhata.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/secondary</item>
    </style>

    <!-- Custom Chip Style -->
    <style name="Widget.MessKhata.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="Widget.MessKhata.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Custom Bottom Navigation Style -->
    <style name="Widget.MessKhata.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.MessKhata.BottomNavigationView.ActiveIndicator</item>
    </style>

    <style name="Widget.MessKhata.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/chip_background</item>
    </style>
</resources>