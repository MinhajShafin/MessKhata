<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MessKhata" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>

        <!-- On Colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.MessKhata" parent="Base.Theme.MessKhata" />

    <!-- Theme without ActionBar for login/signup screens -->
    <style name="Theme.MessKhata.NoActionBar" parent="Theme.MessKhata">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
</resources>